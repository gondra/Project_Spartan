<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="easset.naviapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
         >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/SpartanTheme">

        </activity>
        <activity android:name=".LoginActivity"
            android:theme="@style/NoActionBar" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditContentActivity"
            android:label="@string/edit_record"
            android:theme="@style/SpartanEditTheme"
            android:windowSoftInputMode="adjustPan">

        </activity>
    </application>

</manifest>
